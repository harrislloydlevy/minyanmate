#addYidDialog.modal-dialog
  =bootstrap_form_for yid,
    :remote => true,
    :layout => :horizontal,
    :label_col => "col-xs-2",
    :control_col => "col-xs-10",
    :url => new_yid_to_event_path(),
    :method => :post,
    :html => { :class => "form-horizontal" } do |f|
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#myModalLabel.modal-title Add Yid
      .modal-body
        =hidden_field_tag :event_id, "#{event_id}"
        =f.text_field :name
        =f.email_field :email
        =f.phone_field :phone
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
          %span.glyphicon.glyphicon-remove
          Cancel
        %button.btn.btn-primary{"type" => "submit"}
          %span.glyphicon.glyphicon-save
          Save

