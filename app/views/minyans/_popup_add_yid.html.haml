#addYidDialog.modal-dialog
  =simple_form_for yid, :remote => true, :url => new_yid_to_event_path(), :method => :post,  :html => { :class => "form-horizontal" }  do |f|
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#myModalLabel.modal-title Add Yid
      .modal-body
        - if @yid.errors.any?
          #error_explanation
            %h2
              = pluralize(@yid.errors.count, "error")
              prohibited this yid from being saved:
            %ul
              - @yid.errors.full_messages.each do |msg|
                %li= msg
        =hidden_field_tag :event_id, "#{event_id}"
        =f.input :name
        =f.input :phone
        =f.input :email
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
          %span.glyphicon.glyphicon-remove
          Cancel
        %button.btn.btn-primary{"type" => "submit"}
          %span.glyphicon.glyphicon-save
          Save

