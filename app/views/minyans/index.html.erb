<h1>Listing Minyans</h1>

<p><%= link_to "New Minyan", new_minyan_path %></p>

<table border=1>
<tr>
  <th>
    Title
  </th>
  <th>
    Description
  </th>
  <th>
    Sunday
  </th>
  <th>
    Monday
  </th>
  <th>
    Tuesday
  </th>
  <th>
    Wednesday
  </th>
  <th>
    Thursday
  </th>
  <th>
    Friday
  </th>
  <th>
    Saturday
  </th>
</tr>
<% @minyans.each do |m| %>
  <% isOwner = (m.owner == current_user) %>
  <tr>
    <td>
      <%= m.title %>
    </td>
    <td>
      <%= m.description %>
    </td>
    <td>
      <%= m.sun %>
    </td>
    <td>
      <%= m.mon %>
    </td>
    <td>
      <%= m.tue %>
    </td>
    <td>
      <%= m.wed %>
    </td>
    <td>
      <%= m.thu %>
    </td>
    <td>
      <%= m.fri %>
    </td>
    <td>
      <%= m.sat %>
    </td>
    <td>
      <%= link_to "Show", m %>
      <% if isOwner %>|
      <%= link_to "Edit", edit_minyan_path(m) %> |
      <%= link_to "Delete", minyan_path(m), method: :delete,
        data: {confirm: "Are you sure?"} %>
      <% end %>
    </td>
  </tr>
<% end %>
