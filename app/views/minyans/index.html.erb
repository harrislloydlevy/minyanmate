<div class="row">
  <div class="span12">
    <%= link_to new_minyan_path, class: "btn" do%>
      <i class="icon-plus-sign icon-white"> New Minyan </i>
    <% end %>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
<!--<table class="table table-striped table-hover">-->
<table>
<thead>
<tr>
  <th>
    Title
  </th>
  <th>
    Description
  </th>
  <th>
    Days
  </th>
  <th>
    Actions
  </th>
</tr>
</thead>
<tbody>
<% @minyans.each do |m| %>
  <% isOwner = (m.owner == current_user) %>
  <tr>
    <td>
      <%= m.title %>
    </td>
    <td>
      <%= m.description %>
    </td>
    <td>
      <%= m.days.join(", ") %>
    </td>
    <td>
      <%= link_to "Show", m, class: "btn icon-eye-open"%>
      <% if isOwner %>
      <%= link_to "Edit", edit_minyan_path(m), class: "btn icon-edit" %> 
      <%= link_to "Delete", minyan_path(m), method: :delete,
        data: {confirm: "Are you sure?"},
        class:  "btn btn-danger icon-trash"
      %>
      <% end %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
</div>
