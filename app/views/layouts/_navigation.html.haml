%nav.navbar.navbar-default.navbar-fixed-top{ :role => "navigation"}
  .navbar-header
    %button.navbar-toggle{ :type => "button", "data-toggle" => "collapse", "data-target" => "#mm-navbar-collapse"}
      %span.sr-only
        Toggle Navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{ :href => "/"} MinyanMate
  .collapse.navbar-collapse{ :id => "mm-navbar-collapse"}
    %ul.nav.navbar-nav
      - if current_user
        %li
          = link_to "Organise Minyans", my_minyans_path
        %li
          = link_to "RSVP to Minyans", my_events_path
        %li
          = link_to "My Details", edit_yid_path(current_user)
        %li
          = link_to "Log Out", signout_path
      - else
        %li
          = link_to "Login With Google", "/auth/google_login"
%div
  - flash.each do |key, value|
    - alert_class = (key == :notice) ? "alert-success" : "alert-danger"
    %div.alert.alert-dismissable{:class => "#{alert_class}"}
      = value
      %button.close{ :type => :button, "data-dismiss" => :alert, "aria-hidden" => :true}
        &times;
