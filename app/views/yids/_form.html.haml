= form_for(@yid) do |f|
  - if @yid.errors.any?
    #error_explanation
      %h2
        = pluralize(@yid.errors.count, "error")
        prohibited this yid from being saved:
      %ul
        - @yid.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .actions
    = f.submit
